                    {{#each categories}}
                    <a href="/articles/category/{{this.id}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        {{this.name}}
                        <span class="badge bg-primary rounded-pill">{{this.article_count}}</span>
                    </a>
