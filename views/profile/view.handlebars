<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-circle fa-5x text-primary"></i>
                </div>
                <h4>{{user.username}}</h4>
                <p class="text-muted">{{user.email}}</p>
                <span class="badge bg-{{#if (eq user.role 'admin')}}danger{{else}}secondary{{/if}}">
                    {{user.role}}
                </span>
                <hr>
                <small class="text-muted">
                    Miembro desde: {{formatDate user.created_at}}
                </small>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-file-alt"></i> Mis Artículos</h5>
            </div>
            <div class="card-body">
                {{#if articles.length}}
                <div class="list-group">
                    {{#each articles}}
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">
                                <a href="/articles/view/{{this.id}}" class="text-decoration-none">{{this.title}}</a>
                            </h6>
                            <small>{{formatDate this.created_at}}</small>
                        </div>
                        <p class="mb-1 text-muted">
                            {{#if (gt this.content.length 100)}}
                                {{substr this.content 0 100}}...
                            {{else}}
                                {{this.content}}
                            {{/if}}
                        </p>
                        <small>
                            <span class="badge bg-secondary">{{this.category_name}}</span>
                            <span class="badge bg-{{#if (eq this.status 'published')}}success{{else}}warning{{/if}}">
                                {{this.status}}
                            </span>
                        </small>
                        <div class="mt-2">
                            <a href="/articles/edit/{{this.id}}" class="btn btn-sm btn-outline-primary">Editar</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center py-4">
                    <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No has creado ningún artículo aún.</p>
                    <a href="/articles/create" class="btn btn-primary">Crear mi primer artículo</a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>